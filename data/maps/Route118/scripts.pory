	end

Route118_EventScript_RematchDalton::
	trainerbattle_rematch TRAINER_DALTON_1, Route118_Text_DaltonRematchIntro, Route118_Text_DaltonRematchDefeat
	msgbox Route118_Text_DaltonPostRematch, MSGBOX_AUTOCLOSE
	end

Route118_EventScript_Perry::
	trainerbattle_single TRAINER_PERRY, Route118_Text_PerryIntro, Route118_Text_PerryDefeat
	msgbox Route118_Text_PerryPostBattle, MSGBOX_AUTOCLOSE
	end

Route118_EventScript_Chester::
	trainerbattle_single TRAINER_CHESTER, Route118_Text_ChesterIntro, Route118_Text_ChesterDefeat
	msgbox Route118_Text_ChesterPostBattle, MSGBOX_AUTOCLOSE
	end

Route118_EventScript_Deandre::
	trainerbattle_single TRAINER_DEANDRE, Route118_Text_DeandreIntro, Route118_Text_DeandreDefeat
	msgbox Route118_Text_DeandrePostBattle, MSGBOX_AUTOCLOSE
	end

Route118_Text_StevenQuestions:
	.string "STEVEN: Hi, {PLAYER}{KUN}!\p"
	.string "It's me, STEVEN!\n"
	.string "We met in the cave near DEWFORD.\p"
	.string "Have you met many kinds of POKéMON\n"
	.string "since I last saw you?\p"
	.string "There are many, many kinds of POKéMON\n"
	.string "in this wide world of ours.\p"
	.string "If you wanted to raise only your\n"
	.string "favorites, that's fine.\p"
	.string "Perhaps you find it more fun to raise\n"
	.string "all sorts of POKéMON.\p"
	.string "As a TRAINER of POKéMON,\n"
	.string "what do you think?\p"
	.string "Of course, it's not any of my business.\p"
	.string "It would be nice if we were to meet\n"
	.string "again somewhere.$"

Route118_Text_YouAgreeGoodRodIsGood:
	.string "Hmm!\n"
	.string "A GOOD ROD is really good!\p"
	.string "Wouldn't you agree?$"

Route118_Text_IdenticalMindsTakeThis:
	.string "Hmm!\n"
	.string "We're of identical minds!\p"
	.string "Hmm!\n"
	.string "Take this GOOD ROD!$"

Route118_Text_TryYourLuckFishing:
	.string "Wherever there's water, try your luck\n"
	.string "at fishing.$"

Route118_Text_DontYouLikeToFish:
	.string "Don't you like to fish?$"

Route118_Text_TryCatchingMonWithGoodRod:
	.string "Try catching all sorts of POKéMON\n"
	.string "with your GOOD ROD.$"

Route118_Text_CanCrossRiversWithSurf:
	.string "Even if there isn't a boat, you can\n"
	.string "cross rivers and the sea if you have\l"
	.string "a POKéMON that knows SURF.\p"
	.string "POKéMON can be counted on to do so\n"
	.string "much!$"

Route118_Text_RouteSignMauville:
	.string "ROUTE 118\n"
	.string "{LEFT_ARROW} MAUVILLE CITY$"

Route118_Text_RouteSign119:
	.string "ROUTE 118\n"
	.string "{UP_ARROW} ROUTE 119$"

`

script Route118_EventScript_Wake{
	lockall
	applymovement(LOCALID_WAKE, Common_Movement_FacePlayer)
	goto_if_set(FLAG_RECEIVED_KUBFU, Route118_EventScript_WakeDefeated)
	goto_if_set(FLAG_DECLINED_WAKE_BATTLE, Route118_EventScript_WakeRequestBattleAgain)
	msgbox(Wake_Greeting, MSGBOX_YESNO)
	goto(Route118_EventScript_BattleWakePrompt)
	end
}

script Route118_EventScript_WakeRequestBattleAgain{
	msgbox(Ready_Yet, MSGBOX_YESNO)
	goto(Route118_EventScript_BattleWakePrompt)
	end
}

script Route118_EventScript_BattleWakePrompt{
	call_if_eq(VAR_RESULT, YES, Route118_EventScript_BattleWake)
	goto_if_eq(VAR_RESULT, NO, Route118_EventScript_DeclineWakeBattle)
	closemessage
	end
}

script Route118_EventScript_DeclineWakeBattle {
	setflag(FLAG_DECLINED_WAKE_BATTLE)
	msgbox(Come_Back_When_Ready, MSGBOX_DEFAULT)
	release
	end
}

script Route118_EventScript_BattleWake{
	msgbox("Let's do this.", MSGBOX_DEFAULT)
	trainerbattle_no_intro(TRAINER_WAKE, Wake_Outro)
	giveitem(ITEM_LAPRASITE)
	giveitem(ITEM_DREDNAWITE)
	giveitem(ITEM_GYARADOSITE)
	goto(Route118_EventScript_WakeGiveKubfu)
	return
}
	

script Route118_EventScript_WakeDefeated{
	msgbox(PostBattle_Wake, MSGBOX_DEFAULT)
	releaseall
	end
}

script Route118_EventScript_WakeGiveKubfu{
	setvar(VAR_TEMP_TRANSFERRED_SPECIES, SPECIES_KUBFU)
	givemon(SPECIES_KUBFU, 25)
	goto_if_eq(VAR_RESULT, MON_GIVEN_TO_PARTY, Route118_EventScript_ReceiveKubfuParty)
	goto_if_eq(VAR_RESULT, MON_GIVEN_TO_PC, Route118_EventScript_ReceiveKubfuPC)
	goto(Common_EventScript_NoMoreRoomForPokemon)
	release
	end
}

script Route118_EventScript_ReceiveKubfuParty{
	call(Route118_EventScript_ReceivedKubfuFanfare)
	msgbox(gText_NicknameThisPokemon, MSGBOX_YESNO)
	goto_if_eq(VAR_RESULT, NO, Route118_EventScript_ExplainKubfu)
	call(Common_EventScript_GetGiftMonPartySlot)
	call(Common_EventScript_NameReceivedPartyMon)
	goto(Route118_EventScript_ExplainKubfu)
	end
}
	

script Route118_EventScript_ReceiveKubfuPC {
	call(Route118_EventScript_ReceivedKubfuFanfare)
	msgbox(gText_NicknameThisPokemon, MSGBOX_YESNO)
	goto_if_eq(VAR_RESULT, NO, Route118_EventScript_SendKubfuToPC)
	call(Common_EventScript_NameReceivedBoxMon)
	goto(Route118_EventScript_SendKubfuToPC)
	end
}
	

script Route118_EventScript_SendKubfuToPC {
	call(Common_EventScript_TransferredToPC)
	goto(Route118_EventScript_ExplainKubfu)
	end
}
	

script Route118_EventScript_ReceivedKubfuFanfare {
	playfanfare(MUS_OBTAIN_ITEM)
	message(Route118_Text_PlayerReceivedKubfu)
	waitmessage
	waitfanfare
	bufferspeciesname(STR_VAR_1, SPECIES_KUBFU)
	return
}
	

script Route118_EventScript_ExplainKubfu {
	msgbox(Wake_ExplainKubfu, MSGBOX_DEFAULT)
	setflag(FLAG_RECEIVED_KUBFU)
	release
	end
}
	
text Route118_Text_PlayerReceivedKubfu{
	"{PLAYER} received Kubfu!$"
}

text Wake_ExplainKubfu{
	"Kubfu can evolve in 2 different ways.\n"
	"You can use a Water Stone to evolve it\p"
	"into the Rapid-Strike form, like I have,\n"
	"or you can use a Dusk Stone to evolve\p"
	"it into the Single-Strike form. Both are\n"
	"quite powerful."
}
	
text Wake_Greeting{
	"GLUB GLUB This better be good if\n"
	"you're interrupting my training. You\p"
	"wanna battle or not?"
}
	
text Wake_Outro{
	"Wow, what a fight. I know I'll be leaving\n"
	"this Pokémon in good hands."
}


text PostBattle_Wake{
	"GLUB GLUB What now?!"
}
